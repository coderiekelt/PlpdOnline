{% extends "::base.html.twig" %}

{% block title %}PLPD - Announcements{% endblock %}

{% block body %}
    <div class="page-header">
        <h1>
            Announcements
            {% if is_granted("ROLE_COMMAND") %}
                <span class="pull-right">
                <a href="{{ path("app_announcements_create") }}" class="btn btn-primary btn-xs"><i class="fa fa-plus"></i> New Announcements</a>
            </span>
            {% endif %}
        </h1>
    </div>
    {% for announcement in announcements %}
    <div class="widget-box">
        <div class="widget-header">
            <h4 class="widget-title lighter smaller">
                <i class="fa fa-bullhorn"></i>
                {{ announcement.title }}
            </h4>
            <div class="widget-toolbar">
                <a href="#" data-action="collapse">
                    <i class="ace-icon fa fa-chevron-up"></i>
                </a>
            </div>
        </div>
        <div class="widget-body">
            <div class="widget-main">{{ announcement.body|raw }}</div>
        </div>
    </div>
    {% endfor %}
{% endblock %}
